<%- layout("layouts/boilerplate") %>
<div id="map" style="width: 100%;height: 300px;"></div>
    <h1>All Campgrounds</h1>
    <button class="btn btn-dark mb-3"><a href="/campgrounds/new" style="text-decoration: none; color: white;">Add
            Campground</a></button>

    <% for(let i of s){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(i.image.length) {%>
                    <img class="img-fluid" alt="" src="<%=i.image[0].url%>">
                    <% }else{%>
                        <img class="img-fluid" alt="" src="https://images.unsplash.com/photo-1470071459604-3b5ec3a7fe05?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1440&q=80">
                        <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= i.title %>
                        </h5>
                        <p class="card-text">
                            <%= i.description.substring(0,50)%>...
                        </p>
                      
                        <p class="card-text">
                            <small class="text-muted">
                                <%= i.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=i._id  %> ">View <%= i.title %> </a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>
        <script>
            const campgrounds={features: <%- JSON.stringify(s) %>};
        </script>
        <script src="/javascripts/cluster.js"></script>